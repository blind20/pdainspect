<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <!-- Non focused states -->  
    <item android:state_focused="false" android:state_pressed="false" android:state_selected="false" android:color="#949494"/>  
    <item android:state_focused="false" android:state_pressed="false" android:state_selected="true" android:color="#01A4DF"/>  
  
    <!-- Focused states -->  
    <item android:state_focused="true" android:state_pressed="false" android:state_selected="false" android:color="#949494"/>  
    <item android:state_focused="true" android:state_pressed="false" android:state_selected="true" android:color="#01A4DF"/>  
  
    <!-- Pressed -->  
    <item android:state_pressed="true" android:color="#01A4DF"/>  

</selector>

